<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Security">

        <SwitchPreference
            app:key="lock"
            app:title="@string/lock_preference_title"
            app:summary="@string/lock_preference_summary_not_enable"
            app:enabled="false"
            app:icon="@drawable/baseline_lock_24"/>

        <SwitchPreference
            app:key="lockDetail"
            app:title="@string/lock_detail_preference_title"
            app:summary="@string/lock_detail_preference_summary_not_enable"
            android:enabled="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Tools">

        <Preference
            app:key="backup"
            app:title="@string/backup_preference_title"
            app:summary="@string/backup_preference_summary"
            app:icon="@drawable/baseline_backup_24"/>

        <Preference
            app:key="restore"
            app:title="@string/restore_preference_title"
            app:summary="@string/restore_preference_summary"
            app:icon="@drawable/baseline_restore_page_24"/>

        <Preference
            app:key="deleteAll"
            app:title="@string/delete_preference_title"
            app:summary="@string/delete_preference_summary"
            android:icon="@drawable/baseline_delete_24"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="About">

        <Preference
            app:key="about"
            app:title="About App"
            app:summary="App version : 1.0"
            app:icon="@drawable/baseline_info_24"/>

        <Preference
            app:key="checkUpdate"
            android:title="@string/update_preference_title"
            app:summary="@string/update_preference_message"
            app:icon="@drawable/baseline_system_update_24"/>

    </PreferenceCategory>

</PreferenceScreen>